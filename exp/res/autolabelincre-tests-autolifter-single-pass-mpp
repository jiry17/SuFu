
Inductive List;

single_pass = \v: List -> Int. 
    let run = (fix (
    \f: List -> {Int, Int}. \xs: List. 
    match xs with
      nil _ -> {1, al_inf}
    | cons {h, t} -> 
        let tmp1 = (f t) in 
            {if (and (< (* h tmp1.2) 1) (< h 1)) then 1
            else if (< h 0) then * h tmp1.2
            else * h tmp1.1, if (and (< h (* h tmp1.1)) (< h (* h tmp1.2))) then h
            else if (or (< h 0) (<= (* h tmp1.1) tmp1.2)) then * h tmp1.1
            else * h tmp1.2}
    end
)) in 
        \xs: List. 
        let tmp2 = (run xs) in 
            tmp2.1;

max = \a: Int. \b: Int. 
    if (< a b) then b
    else a;

mpp = fix (
    \f: Int -> List -> Int. \pre: Int. \l: List. 
    match l with
      nil _ -> pre
    | cons {h, t} -> max pre (f (* h pre) t)
    end
) 1;

main = single_pass mpp;
