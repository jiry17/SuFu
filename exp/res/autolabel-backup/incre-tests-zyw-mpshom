
Inductive List;

Inductive CList;

max = \a: Int. \b: Int. 
    if (< a b) then b
    else a;

spec = fix (
    \f: List -> {Int, Int}. \xs: List. 
    match xs with
      nil _ -> {0, 0}
    | cons {hd, tl} -> 
        let result = (f tl) in 
            let new_mps = (max 0 (+ hd result.1)) in 
                let new_sum = (+ hd result.2) in 
                    {new_mps, new_sum}
    end
);

cat = fix (
    \f: List -> List -> List. \xs: List. \ys: List. 
    match xs with
      nil _ -> ys
    | cons {a, b} -> cons {a, f b ys}
    end
);

repr = fix (
    \f: CList -> {Int, Int}. \xs: CList. 
    match xs with
      cnil _ -> {0, 0}
    | single a -> {max a 0, a}
    | concat {a, b} -> 
        let tmp3 = (f a) in 
            let tmp4 = (f b) in 
                {+ tmp3.2 (max tmp4.1 (- tmp3.1 tmp3.2)), + tmp4.2 tmp3.2}
    end
);

main = \x: CList. 
    let tmp5 = (repr x) in 
        {tmp5.1, tmp5.2};
