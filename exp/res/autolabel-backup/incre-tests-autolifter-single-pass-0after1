
Inductive List;

single_pass = \v: List -> Bool. 
    let run = (fix (
    \f: List -> {Bool, Int}. \xs: List. 
    match xs with
      nil _ -> {false, al_inf}
    | cons {h, t} -> 
        let tmp1 = (f t) in 
            {or (< tmp1.2 h) tmp1.1, if (and (== h 1) (< 0 tmp1.2)) then 1
            else 0}
    end
)) in 
        \xs: List. 
        let tmp2 = (run xs) in 
            tmp2.1;

inf = 100;

zafter1 = fix (
    \f: Bool -> List -> Bool. \seen1: Bool. \xs: List. 
    match xs with
      nil _ -> false
    | cons {h, t} -> if (and seen1 (== h 0)) then true
        else f (or seen1 (== h 1)) t
    end
) false;

main = single_pass zafter1;
