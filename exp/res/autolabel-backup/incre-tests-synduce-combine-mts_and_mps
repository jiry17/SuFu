
Inductive List;

max = \a: Int. \b: Int. 
    if (< a b) then b
    else a;

mts = fix (
    \f: Int -> List -> Int. \pre: Int. \xs: List. 
    match xs with
      nil _ -> pre
    | cons {h, t} -> f (max 0 (+ h pre)) t
    end
);

mps = fix (
    \f: List -> Int. \xs: List. 
    match xs with
      nil _ -> 0
    | cons {h, t} -> max (+ h (f t)) 0
    end
);

spec = \xs: List. 
    {mts 0 xs, mps xs};

repr = fix (
    \f: List -> {Int, Int, Int}. \xs: List. 
    match xs with
      nil _ -> {0, 0, 0}
    | cons {h, t} -> 
        let tmp2 = (f t) in 
            {+ tmp2.3 (max h (- tmp2.1 tmp2.3)), + tmp2.2 (max h (- 0 tmp2.2)), + h tmp2.3}
    end
);

main = \xs: List. 
    let tmp3 = (repr xs) in 
        {tmp3.1, tmp3.2};
