
Inductive List;

single_pass = \v: List -> Bool. 
    let run = (fix (
    \f: List -> Bool. \xs: List. 
    match xs with
      nil _ -> true
    | cons {h, t} -> 
        let tmp1 = (f t) in 
            let c0 = (al_head t) in 
                or (and tmp1 (<= c0 h)) (al_error c0)
    end
)) in 
        \xs: List. 
        let tmp2 = (run xs) in 
            tmp2;

inf = 100;

zsos = fix (
    \f: Bool -> List -> Bool. \an: Bool. \xs: List. 
    match xs with
      nil _ -> true
    | cons {h, t} -> 
        let an = (and an (== h 1)) in 
            if (or (== h 0) an) then f an t
            else false
    end
) true;

main = single_pass zsos;
