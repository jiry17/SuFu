
Inductive Tree;

max = \a: Int. \b: Int. 
    if (< a b) then b
    else a;

min = \a: Int. \b: Int. 
    if (< a b) then a
    else b;

tmin = fix (
    \f: Tree -> Int. \t: Tree. 
    match t with
      leaf w -> w
    | node {w, l, r} -> min w (min (f l) (f r))
    end
);

tmax = fix (
    \f: Tree -> Int. \t: Tree. 
    match t with
      leaf w -> w
    | node {w, l, r} -> max w (max (f l) (f r))
    end
);

@Input lo = Int;

@Input hi = Int;

repr = fix (
    \f: Tree -> Bool. \t: Tree. 
    match t with
      leaf w -> and (< w hi) (< lo w)
    | node {w, l, r} -> if (>= w hi) then let tmp2 = (f l) in 
            let tmp3 = (f r) in 
                or tmp3 tmp2
        else let tmp4 = (f l) in 
            let tmp5 = (f r) in 
                or (or (< lo w) tmp5) tmp4
    end
);

spec = fix (
    \f: Tree -> Bool. \t: Tree. 
    match t with
      leaf w -> and (< lo w) (< w hi)
    | node {w, l, r} -> or (or (and (< lo w) (< w hi)) (f l)) (f r)
    end
);

main = \t: Tree. 
    if (< lo hi) then let tmp6 = (repr t) in 
        tmp6
    else false;
