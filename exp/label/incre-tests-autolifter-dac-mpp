
Inductive List;

length = fix (
    \f: List -> Int. \x: List. 
    match x with
      cons {h, t} -> + (f t) 1
    | nil _ -> 0
    end
);

concat = fix (
    \f: List -> List -> List. \x: List. \y: List. 
    match x with
      cons {h, t} -> cons {h, f t y}
    | nil _ -> y
    end
);

split = \xs: List. 
    fix (
    \f: List -> Int -> {List, List}. \x: List. \n: Int. 
    if (< n 1) then {nil Unit, x}
    else match x with
      cons {h, t} -> 
        let res = (f t (- n 1)) in 
            {cons {h, res.1}, res.2}
    | _ -> {nil Unit, nil Unit}
    end
) xs (/ (length xs) 2);

dac = \v: List -> Int. \xs: List. 
    let run = (fix (
    \f: List -> Compress List. \xs: List. 
    match xs with
      nil _ -> 
        align (label xs ) 
    | cons {_, nil _} -> 
        align (label xs ) 
    | _ -> 
        let sp = (split xs) in 
            let tmp1 = (f sp.1) in 
                let tmp2 = (f sp.2) in 
                    align (label (concat (unlabel tmp1 ) (unlabel tmp2 )) ) 
    end
)) in 
        let tmp3 = (run xs) in 
            align (v (unlabel tmp3 )) ;

max = \a: Int. \b: Int. 
    if (< a b) then b
    else a;

mpp = fix (
    \f: Int -> List -> Int. \pre: Int. \l: List. 
    match l with
      nil _ -> pre
    | cons {h, t} -> max pre (f (* h pre) t)
    end
) 1;

main = dac mpp;
