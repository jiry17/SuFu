
Inductive List;

is_sorted = let aux = (fix (
    \f: Int -> List -> Bool. \pre: Int. \xs: List. 
    match xs with
      elt x -> <= pre x
    | cons {h, t} -> and (<= pre h) (f h t)
    end
)) in 
        \xs: List. 
        match xs with
          elt x -> true
        | cons {h, t} -> aux h t
        end
;

@Input w = Int;

spec = fix (
    \f: List -> Int. \xs: List. 
    match xs with
      elt a -> if (< a w) then 1
        else 0
    | cons {h, t} -> + (if (< h w) then 1
        else 0) (f t)
    end
);

target = fix (
    \f: List -> Int. \xs: List. 
    match xs with
      elt w -> 
        let c0 = (- w w) in 
            if (<= 0 c0) then 0
            else 1
    | cons {h, t} -> if (< h w) then let tmp1 = (f t) in 
            + 1 tmp1
        else 0
    end
);

main = \xs: List. 
    if (is_sorted xs) then let tmp2 = (target xs) in 
        tmp2
    else 0;
