type 'a tree = Node of 'a * 'a tree * 'a tree | Leaf of 'a

pmrs spec =
    main t -> f t
    | f Leaf(x) -> x
    | f Node(a,l,r) -> let m = h a l in h m r
    | h s Leaf(x) -> min x s
    | h s Node(a,l,r) -> let m = h (max a s) l in h m r

pmrs (join, f0) target =
    main t1 -> h t1
    | h Leaf(x) -> f0 x
    | h Node(a,l,r) -> join a (h l) (h r)

let repr x = x